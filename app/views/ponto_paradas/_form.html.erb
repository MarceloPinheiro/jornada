<%= form_for @ponto_parada, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :descricao, :class => 'control-label' %>
    <%= f.text_field :descricao, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tipo_parada_id, :class => 'control-label' %>
    <%= f.collection_select(:tipo_parada_id,TipoParada.all.order("descricao asc"),:id,:descricao,{}, :class => 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label' %>
    <%= f.text_field :latitude, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label' %>
    <%= f.text_field :longitude, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :raio, :class => 'control-label' %>
    <%= f.text_field :raio, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ponto_paradas_path, :class => 'btn' %>
  </div>
<% end %>
