<%- model_class = Evento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:veiculo_id) %>:</strong></dt>
  <dd><%= @evento.veiculo_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motorista_id) %>:</strong></dt>
  <dd><%= @evento.motorista_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_evento_id) %>:</strong></dt>
  <dd><%= @evento.tipo_evento_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_evento) %>:</strong></dt>
  <dd><%= @evento.data_evento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:data_lancamento) %>:</strong></dt>
  <dd><%= @evento.data_lancamento %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
  <dd><%= @evento.local %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motor) %>:</strong></dt>
  <dd><%= @evento.motor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:velocidade) %>:</strong></dt>
  <dd><%= @evento.velocidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:altitude) %>:</strong></dt>
  <dd><%= @evento.altitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @evento.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @evento.longitude %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              eventos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evento_path(@evento), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              evento_path(@evento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
