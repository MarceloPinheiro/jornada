<%- model_class = Evento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:veiculo_id) %></th>
      <th><%= model_class.human_attribute_name(:motorista_id) %></th>
      <th><%= model_class.human_attribute_name(:tipo_evento_id) %></th>
      <th><%= model_class.human_attribute_name(:data_evento) %></th>
      <th><%= model_class.human_attribute_name(:data_lancamento) %></th>
      <th><%= model_class.human_attribute_name(:local) %></th>
      <th><%= model_class.human_attribute_name(:motor) %></th>
      <th><%= model_class.human_attribute_name(:velocidade) %></th>
      <th><%= model_class.human_attribute_name(:altitude) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @eventos.each do |evento| %>
      <tr>
        <td><%= link_to evento.id, evento_path(evento) %></td>
        <td><%= evento.veiculo_id %></td>
        <td><%= evento.motorista_id %></td>
        <td><%= evento.tipo_evento_id %></td>
        <td><%= evento.data_evento %></td>
        <td><%= evento.data_lancamento %></td>
        <td><%= evento.local %></td>
        <td><%= evento.motor %></td>
        <td><%= evento.velocidade %></td>
        <td><%= evento.altitude %></td>
        <td><%= evento.latitude %></td>
        <td><%= evento.longitude %></td>
        <td><%=l evento.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_evento_path(evento), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      evento_path(evento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_evento_path,
            :class => 'btn btn-primary' %>
