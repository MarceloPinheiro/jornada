<%- model_class = VeiculoMotorista -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> - <%= @veiculo.placa %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:veiculo_id) %></th>
      <th><%= model_class.human_attribute_name(:motorista_id) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @veiculo_motoristas.each do |veiculo_motorista| %>
      <tr>
        <td><%= link_to veiculo_motorista.id, veiculo_motorista_path(veiculo_motorista) %></td>
        <td><%= veiculo_motorista.veiculo.placa %></td>
        <td><%= veiculo_motorista.motorista.nome %></td>
        <td><%= (1 == veiculo_motorista.status.to_i ? "Ativo" : "Inativo") %></td>
        <td><%=l veiculo_motorista.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_veiculo_motorista_path(veiculo_motorista), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      veiculo_motorista_path(veiculo_motorista),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_veiculo_motorista_path(:id => @veiculo.id),
            :class => 'btn btn-primary' %>

<%= link_to 'Voltar',veiculos_path(), :class => 'btn btn-default' %>
