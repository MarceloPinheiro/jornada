<%= form_for @veiculo_motorista, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :veiculo_id, :class => 'control-label' %>
    <%= f.hidden_field :veiculo_id, :value => @veiculo.id %>
    <%= f.label @veiculo.placa, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :motorista_id, :class => 'control-label' %>
    <%= f.collection_select(:motorista_id,Motorista.all.order("nome asc"),:id,:nome,{}, :class => 'form-control') %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label' %>
    <%= f.select :status,[["Ativo",1],["Inativo",0]],{}, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                veiculo_motoristas_path, :class => 'btn' %>
  </div>
<% end %>
